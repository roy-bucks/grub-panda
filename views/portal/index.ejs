  <link rel="shortcut icon" href="/img/logo.png"/>
  <link rel="stylesheet" href="/css/style/login.css">
  <!-- <link rel="icon" href="/img/logo.png"> -->
</head>

<body >
  <div class="container-scroller ">
    <div class="container-fluid  page-body-wrapper full-page-wrapper">
      <div class="content-wrapper login-bg d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">

                <div class="d-flex justify-content-center"> 
                    <img src="/img/cvsu_login_banner.png" class="img-fluid pb-3" alt="cvsu logo">
                </div>

                <div class="form-group">
                  <input type="text" class="form-control form-control-lg username" id="exampleInputEmail1" placeholder="Username">
                  <div id="validationServer03Feedback" class="invalid-feedback">
                    Invalid username or password
                  </div>
                </div>
                <div class="form-group">
                  <input type="password" class="form-control form-control-lg password"  id="exampleInputPassword1" placeholder="Password">
                </div>

                <div class="d-flex justify-content-start" > 

                    <div class="form-check">
                        <label class="form-check-label text-muted">
                          <input class="showPassword" type="checkbox" class="form-check-input">
                           Show password
                        <i class="input-helper"></i></label>
                    </div>


                </div>

                

                <div class="mt-3">
                  <a class="btn btn-block login btn-success  font-weight-medium auth-form-btn" >LOG IN</a>
                  <button class="btn btn-success w-100 login-load d-none " type="button" disabled>
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    Hold On...
                </button>
                </div>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->

    <!-- Modal -->
<div class="modal fade login-selection" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">User  Option</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <div class ="d-flex justify-content-center flex-column align-items-center"> 
                <img class="image-responsive" src="/img/educ.svg" alt="Education banner" width="200" height="200">
                <span>Hello <span class="name"></span>! Please select type of user to login.</span>
                <div class="mt-3 d-flex flex-column align-items-center  w-100 "> 
                  <button type="button" class="btn  btn-primary w-50 d-flex justify-content-center align-items-center">
                    <i class="bi bi-person-circle "></i>
                     <span class="fw-bold option1" style="font-size: 12px; margin-left: 5px;"></span> 
                  </button>
                  <button type="button" class="btn  btn-success w-50 d-flex mt-3 justify-content-center align-items-center" >
                    <i class="bi bi-person-circle "></i>
                    <span class="fw-bold option2" style="font-size: 12px;  margin-left: 5px;"></span>
                </button>
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>

  </div>






  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
